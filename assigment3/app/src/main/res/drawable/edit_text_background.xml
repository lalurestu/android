<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Warna latar belakang EditText -->
    <solid android:color="@android:color/white"/>

    <!-- Border EditText -->
    <stroke
        android:width="1dp"
        android:color="@color/gray"/> <!-- Pastikan warna gray didefinisikan di colors.xml -->

    <!-- Sudut melengkung -->
    <corners android:radius="8dp"/>

    <!-- Padding untuk teks di dalam EditText -->
    <padding
        android:left="8dp"
        android:top="12dp"
        android:right="8dp"
        android:bottom="12dp"/>

</shape>